[gcode_macro probe_TEST]
gcode:
    PROBE
    G28

[gcode_macro UNLOAD_FILAMENT]
gcode:
    M83
    G1 E10 F300
    G1 E-330 F800
    M82

[gcode_macro LOAD_FILAMENT]
gcode:
    M83
    G1 E330 F3000 #1800
    G1 E30 F300
    G1 E20 F60
    M82

[gcode_macro M600]
gcode:
  PAUSE   ; everything needed is defined there
 
[gcode_macro M900]
gcode:
    {% set K = params.K|default(0)|float %}
	SET_PRESSURE_ADVANCE ADVANCE={K}

[gcode_macro delta_cali]
gcode:
  BED_MESH_CLEAR
  G28
  DELTA_CALIBRATE

